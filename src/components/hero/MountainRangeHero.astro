---
import Carat from "components/carat/Carat.astro";
import { t } from "utils/i18n";
---

<div class="hero-mountain-range">
	<div class="flex-wrapper">
		<div class="text-wrapper">
			<small class="vertical-rl">
				{t('Energy ∙ Industry ∙ Food & Land ∙ Materials ∙ Mobility')}
			</small>
		</div>
		<div class="video-wrapper">
			<video playsinline autoplay muted loop controls={false}>
				<source src="/assets/hero/hero-mountain-range.mp4" type="video/mp4" />
			</video>
		</div>
	</div>
	<Carat href="#founders" />
</div>

<style>
	.flex-wrapper {
		display: flex;
		flex-direction: row;
		height: calc((9/16) * 100vw);
		max-height: 65vh;
		min-height: 32rem;
	}
	.text-wrapper {
		min-width: var(--gutter-width);
		display: flex;
    justify-content: center;
		padding-bottom: 1rem;
	}
	.video-wrapper {
		flex-grow: 2;
	}
	video {
		object-fit: cover;
		width: 100%;
		height: 100%;
	}
	@media (max-width: 742px) {
		.text-wrapper {
			padding-bottom: 0;
		}
	}
</style>