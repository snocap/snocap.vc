---
import { t } from "src/lib/i18n"

const year = new Date().getFullYear()
---

<footer>
	<p>{t('Got a Question?')} <a href="mailto:hello@snocap.vc">Email Us</a>!</p>
	<p>&copy; {t('{year} SNO Management, LLC. All rights reserved.', { year })}</p>
	<img src="/assets/hero/hero-blue-mountains.jpg" alt={t('Footer Image')} class="footer-image" />
</foooter>

<style>
	footer {
		display: flex;
		flex-direction: column;
		align-items: flex-end;
		row-gap: 0.5rem;
	}
	a {
		text-decoration: underline;
	}
	a:hover {
		text-decoration: dotted;
	}
	p {
		padding: 0 var(--gutter-width);
	}
	img {
		width: 100%;
		object-fit: cover;
		object-position: top center;
	}
</style>